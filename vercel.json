{
  "version": 2,
  "installCommand": "echo 'Skipping root install'",
  "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build && cd ../server && npm install",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "outputDirectory": "client/build"
}
