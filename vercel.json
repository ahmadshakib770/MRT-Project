{
  "version": 2,
  "installCommand": "echo 'Skipping root install'",
  "buildCommand": "npm install --legacy-peer-deps --force && npm run build && npm install --prefix ../api --legacy-peer-deps",
  "outputDirectory": "build",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    }
  ]
}
