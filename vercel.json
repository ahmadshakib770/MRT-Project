{
  "version": 2,
  "installCommand": "echo 'Skipping root install'",
  "buildCommand": "npm install --legacy-peer-deps --force && npm run build && npm install --prefix ../server",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/$1"
    }
  ],
  "outputDirectory": "build"
}
