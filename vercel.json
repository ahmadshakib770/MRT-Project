{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install --prefix=. && npm install --prefix=client && npm install --prefix=server",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "outputDirectory": "client/build"
}
